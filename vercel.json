{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "python": "3.10",
        "includeFiles": "requirements.txt"
      }
    },
    {
      "src": "api/mcp.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "python": "3.10",
        "includeFiles": "requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/mcp(.*)",
      "dest": "/api/mcp.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    }
  ]
}

